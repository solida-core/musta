if config.get("run").get("analysis"):

    rule analysis:
        input:
            resolve_single_filepath(
                config.get("paths").get("results_dir"),
                "results/analysis/signatures/plots/cosmic_signatures.png",
            ),
            resolve_single_filepath(
                config.get("paths").get("results_dir"),
                "results/analysis/driver/plots/somatic_interactions.png",
            ),
            resolve_single_filepath(
                config.get("paths").get("results_dir"),
