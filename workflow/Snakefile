            ),
            resolve_single_filepath(
                config.get("paths").get("results_dir"),
                "results/analysis/pathways/plots/oncogenic_pathways.png",
            ),
            resolve_single_filepath(
                config.get("paths").get("results_dir"),
                "results/analysis/heterogeneity/tables/successful.tsv",
            ),
